// Create the block, empty.
block, _ := client.MakeMutableBlock(context.Background(),
                                    &doughnut.MakeMutableBlockRequest{})
// Create a payload.
payload := []byte("some data")
// Set the block payload.
block.Payload = &doughnut.Block_DataPlain{payload}
// Actually insert the block.
client.Insert(context.Background(),
              &doughnut.InsertRequest{Block: block})
