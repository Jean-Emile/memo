#ifdef INFINIT_MACOSX
        , boost::optional<std::string> volname_ = {}
        , boost::optional<std::string> volicon_ = {}
#endif
    )
    {
      auto fs = elle::make_unique<filesystem::FileSystem>(this->name, dht);
      auto driver =
        elle::make_unique<reactor::filesystem::FileSystem>(std::move(fs), true);
      boost::optional<boost::filesystem::path> mountpoint;
      if (mountpoint_)
        mountpoint = mountpoint_.get();
      else if (this->mountpoint)
        mountpoint = this->mountpoint.get();
      if (mountpoint)
      {
        try
        {
          create_directories(mountpoint.get());
        }
        catch (boost::filesystem::filesystem_error const&)
        {}
        std::vector<std::string> mount_options = {
          "infinit-volume",
          "-o", "noatime",
          "-o", "hard_remove",
        };
#ifdef INFINIT_MACOSX
        auto add_option = [] (std::string const& opt_name,
                              std::string const& opt_val,
                              std::vector<std::string>& options)
          {
            options.push_back("-o");
            options.push_back(elle::sprintf("%s=%s", opt_name, opt_val));
          };
        std::vector<std::string> mac_mount_options = {
          "-o", "daemon_timeout=600",
        };
        if (volname_)
          add_option("volname", volname_.get(), mac_mount_options);
        if (volicon_)
          add_option("volicon", volicon_.get(), mac_mount_options);
        mount_options.insert(mount_options.end(),
                             mac_mount_options.begin(),
                             mac_mount_options.end());
#endif
        driver->mount(mountpoint.get(), mount_options);
      }
      return driver;
    }

