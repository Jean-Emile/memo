    std::unique_ptr<reactor::filesystem::FileSystem>
    run(std::shared_ptr<model::doughnut::Doughnut> dht,
        boost::optional<std::string> mountpoint_ = {},
        boost::optional<bool> readonly = {}
#if defined(INFINIT_MACOSX) || defined(INFINIT_WINDOWS)
        , boost::optional<std::string> volname_ = {}
#endif
#ifdef INFINIT_MACOSX
        , boost::optional<std::string> volicon_ = {}
#endif
#ifndef INFINIT_WINDOWS
        , boost::optional<std::vector<std::string>> fuse_options = {}
#endif
    )
    {
#if defined(INFINIT_MACOSX) || defined(INFINIT_WINDOWS)
      if (!volname_)
        volname_ = this->name;
#endif
      boost::optional<boost::filesystem::path> mountpoint;
      if (mountpoint_)
        mountpoint = mountpoint_.get();
      else if (this->mountpoint)
        mountpoint = this->mountpoint.get();
      auto fs = elle::make_unique<filesystem::FileSystem>(
        this->name, dht, this->root_block_cache_dir(), mountpoint);
      auto driver =
        elle::make_unique<reactor::filesystem::FileSystem>(std::move(fs), true);
      if (mountpoint)
      {
        std::vector<std::string> mount_options = {
          "infinit-volume",
          "-o", "noatime",
          "-o", "hard_remove",
        };
        if (readonly && readonly.get())
        {
          mount_options.push_back("-o");
          mount_options.push_back("ro");
        }
#ifndef INFINIT_WINDOWS
        if (fuse_options)
        {
          for (auto const& opt: fuse_options.get())
          {
            mount_options.push_back("-o");
            mount_options.push_back(opt);
          }
        }
#endif
#if defined(INFINIT_MACOSX) || defined(INFINIT_WINDOWS)
        auto add_option =
          [&mount_options] (std::string const& opt_name,
                            std::string const& opt_val)
          {
            mount_options.push_back("-o");
            mount_options.push_back(elle::sprintf("%s=%s", opt_name, opt_val));
          };
        add_option("volname", volname_.get());
#endif
#ifdef INFINIT_MACOSX
        add_option("daemon_timeout", "600");
        if (volicon_)
          add_option("volicon", volicon_.get());
#endif
        driver->mount(mountpoint.get(), mount_options);
      }
      return driver;
    }

