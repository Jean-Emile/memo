  struct User
  {
    User(std::string const& name,
         cryptography::rsa::KeyPair const& keys,
         boost::optional<std::string> email = {},
         boost::optional<std::string> fullname = {})
      : name(name)
      , public_key(keys.K())
      , private_key(keys.k())
