#!/usr/bin/env python3

from utils import *

with Infinit() as bob:
  bob.run(['infinit-user', '--compatibility-version', '0.3.0',
           '--version'])
  bob.run(['infinit-user', '--compatibility-version', '0.5.2',
           '--version'])
  throws(lambda: bob.run(['infinit-user', '--compatibility-version', '0.119.0',
                          '--version']))
  throws(lambda: bob.run(['infinit-user', '--compatibility-version', '1..',
                          '--version']))
  throws(lambda: bob.run(['infinit-user', '--compatibility-version', ' ',
                          '--version']))
  throws(lambda: bob.run(['infinit-user', '--compatibility-version', 'nekolas',
                          '--version']))
  throws(lambda: bob.run(['infinit-user', '--compatibility-version', '0..',
                          '--version']))
