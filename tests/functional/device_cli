#!/usr/bin/env python3

from utils import *
import json

## --------------- ##
## Use hub to pair ##
##---------------- ##
# Normal case.
with Beyond() as beyond, Infinit(beyond = beyond) as alice, \
     Infinit(beyond = beyond) as alice2:
  # Signup without sending private key.
  alice.run(['infinit-user', '--signup',
             '--name', 'alice',
             '--email', 'alice@infinit.io'])
  alice_json = alice.run(['infinit-user', '--export', '--name', 'alice', '--full'])
  alice.run(['infinit-device', '--transmit', '--user', '--as', 'alice',
             '--passphrase', 'the_passphrase'])
  alice2.run(['infinit-device', '--receive', '--user', '--name', 'alice',
              '--passphrase', 'the_passphrase'])

  alice2_json = alice2.run(['infinit-user', '--export', '--name', 'alice', '--full'])
  assertEq(alice_json['private_key'], alice2_json['private_key'])

# Passphrase from input.
with Beyond() as beyond, Infinit(beyond = beyond) as alice, \
     Infinit(beyond = beyond) as alice2:
  passphrase = 'super_passphrase'
  # Signup without sending private key.
  alice.run(['infinit-user', '--signup',
             '--name', 'alice',
             '--email', 'alice@infinit.io'])
  alice_json = alice.run(['infinit-user', '--export', '--name', 'alice', '--full'])
  alice.run(['infinit-device', '--transmit', '--user', '--as', 'alice', '--no-countdown'],
             input = passphrase)
  alice2.run(['infinit-device', '--receive', '--user', '--name', 'alice'],
             input = passphrase)
  alice2_json = alice2.run(['infinit-user', '--export', '--name', 'alice', '--full'])
  assertEq(alice_json['private_key'], alice2_json['private_key'])

#  Expired.
with Beyond() as beyond, Infinit(beyond = beyond) as alice, \
     Infinit(beyond = beyond) as alice2:
   passphrase = 'super_passphrase'
   # Signup without sending private key.
   alice.run(['infinit-user', '--signup',
              '--name', 'alice',
              '--email', 'alice@infinit.io'])
   alice_json = alice.run(['infinit-user', '--export', '--name', 'alice', '--full'])
   alice.run(['infinit-device', '--transmit', '--user', '--as', 'alice', '--no-countdown'],
             input = passphrase)
   beyond.advance(5 * 6000 + 1)
   try:
     alice2.run(['infinit-device', '--receive', '--user', '--name', 'alice'],
                input = passphrase)
     unreachable()
   except Exception as e:
     assert 'pairing/gone' in e.args[0]

# Invalid passphrase.
with Beyond() as beyond, Infinit(beyond = beyond) as alice, \
     Infinit(beyond = beyond) as alice2:
  passphrase = 'super_passphrase'
  # Signup without sending private key.
  alice.run(['infinit-user', '--signup',
             '--name', 'alice',
             '--email', 'alice@infinit.io'])
  alice_json = alice.run(['infinit-user', '--export', '--name', 'alice', '--full'])
  alice.run(['infinit-device', '--transmit', '--user', '--as', 'alice', '--no-countdown'],
            input = passphrase)
  try:
    alice2.run(['infinit-device', '--receive', '--user', '--name', 'alice'],
               input = 'not_the_passphrase')
    unreachable()
  except Exception as e:
    # Should just be 'invalid passphrase'.
    assert 'pairing/invalid_passphrase' in e.args[0]

# No pairing information.
with Beyond() as beyond, Infinit(beyond = beyond) as alice, \
     Infinit(beyond = beyond) as alice2:
  passphrase = 'super_passphrase'
  # Signup without sending private key.
  alice.run(['infinit-user', '--signup',
             '--name', 'alice',
             '--email', 'alice@infinit.io'])
  try:
    alice.run(['infinit-device', '--receive', '--user', '--name', 'alice'],
              input = passphrase)
    unreachable()
  except Exception as e:
    # Should just be 'No pairing information'.
    assert 'pairing_information/not_found' in e.args[0]

# Pairing information usable once.
with Beyond() as beyond, Infinit(beyond = beyond) as alice, \
Infinit(beyond = beyond) as alice2:
  passphrase = 'super_passphrase'
  alice.run(['infinit-user', '--signup',
             '--name', 'alice',
             '--email', 'alice@infinit.io'])
  alice.run(['infinit-device', '--transmit', '--user', '--as', 'alice', '--no-countdown'],
             input = passphrase)
  alice2.run(['infinit-device', '--receive', '--user', '--name', 'alice'],
             input = passphrase)
  try:
    alice2.run(['infinit-device', '--receive', '--user', '--name', 'alice'],
               input = passphrase)
    unreachable()
  except Exception as e:
    # Should just be 'No pairing information'.
    assert 'pairing_information/not_found' in e.args[0]
