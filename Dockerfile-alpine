FROM alpine:latest

RUN  apk add --update attr-dev bash ca-certificates file jq groff less linux-headers curl patch python3 python3-dev perl g++ git make bsd-compat-headers && python3 -m ensurepip && pip3 install awscli mistune orderedset greenlet mako && apk --purge -v del py-pip && rm -rf /var/cache/apk/*

# RUN mkdir /lib64 && ln -s /lib/libc.musl-x86_64.so.1 /lib64/ld-linux-x86-64.so.2

ADD . /root/fs

RUN cat /root/fs/alpine_socket_header_signedness.patch | patch -p0 -d /

WORKDIR /root/fs/_build/alpine
RUN python3 ./drake //install --prefix=/usr/local
